{
  "required_api_version": "2",
  "name": "Pinboard",
  "description": "Manage and search your Pinboard.in bookmarks",
  "developer_name": "Daniel Hoisel",
  "icon": "images/pinboard-logo.png",
  "options": {
    "query_debounce": 0.5
  },
  "preferences": [
    {
      "id": "pinboard_kw",
      "type": "keyword",
      "name": "Pinboard",
      "description": "Search and manage your Pinboard bookmarks",
      "default_value": "pb"
    },
    {
      "id": "pinboard_token",
      "type": "input",
      "name": "Pinboard Token",
      "description": "Your Pinboard API token (username:token)",
      "default_value": ""
    },
    {
      "id": "max_results",
      "type": "select",
      "name": "Maximum Results",
      "description": "Maximum number of results to display",
      "default_value": "50",
      "options": [
        {"value": "5", "text": "5"},
        {"value": "10", "text": "10"},
        {"value": "20", "text": "20"},
        {"value": "50", "text": "50"},
        {"value": "100", "text": "100"},
        {"value": "200", "text": "200"}
      ]
    },
    {
      "id": "cache_time",
      "type": "select",
      "name": "Cache Duration",
      "description": "How long to cache data from Pinboard (in minutes)",
      "default_value": "5",
      "options": [
        {"value": "1", "text": "1 minute"},
        {"value": "2", "text": "2 minutes"},
        {"value": "5", "text": "5 minutes"},
        {"value": "15", "text": "15 minutes"},
        {"value": "30", "text": "30 minutes"},
        {"value": "60", "text": "1 hour"}
      ]
    },
    }
  ]
} 